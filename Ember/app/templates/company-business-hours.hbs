<div class="card text-center" style="border-bottom-width: 0px;">
  <div class="card-header" style="font-size: 2em;">
    <div class="row">
      <div class="col-2">
        {{#link-to 'my-account'}}
          <span class="glyphicon glyphicon-chevron-left"></span>
        {{/link-to}}
      </div>
