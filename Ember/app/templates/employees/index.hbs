<div class="table-responsive">
  <h3 class="page-title">Manage Employees</h3>
  <table class="table table-hover employees-table">
    <thead class="thead-inverse">
      <tr>
        <th><h1>Employee ID</h1></th>
        <th><h1>Last Name</h1></th>
        <th><h1>First Name</h1></th>
        <th><h1>Email</h1></th>
        {{!-- <th>Address</th> --}}
        <th><h1>Phone</h1></th>
        <th><h1>Start Date</h1></th>
        <th><h1>End Date</h1></th>
        <th><h1>Admin</h1></th>
        <th><h1>Notes</h1></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |employee|}}
        <tr>
          <td>
            {{employee.id}}
          </td>
          <td>
            {{employee.lastName}}
          </td>
          <td>
            {{employee.firstName}}
          </td>
          <td>
            {{employee.email}}
          </td>
          <td>
            {{employee.phoneNumber}}
          </td>
          <td>
            {{employee.startDate}}
          </td>
          <td>
            {{employee.endDate}}
          </td>
          <td>
            {{employee.isAdmin}}
          </td>
          <td>
            {{employee.notes}}
          </td>
          <td>
            {{#link-to 'employees.show' employee.id class="dropdown-item"}}
              <span class="glyphicon glyphicon-pencil"></span>
            {{/link-to}}
          </td>
          <td>
            <button {{action 'deleteEmployee' employee }} class="dropdown-item">
              <span class="glyphicon glyphicon-minus"></span>
            </button>
          </td>
        </tr>
      {{/each}}
    </tbody>
    <br>
  </table>
   <div class="buttons">
     {{#link-to 'employees.new' class="btn btn-primary managing" }}
      <span class="glyphicon glyphicon-plus"></span> Add Employee
     {{/link-to}}
  </div>
</div>
