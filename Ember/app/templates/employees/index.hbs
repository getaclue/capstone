<div class="management-div">
  <div class="management-title-div">
      <h4><span class="glyphicon glyphicon-user" style="margin: 0px 0.5em;"></span>Manage Employees</h4>
  </div>
  <br />
  <div>
      {{
        management-tables
        model=model
        headers=headers
        attributes=attributes
        operations=operations
        collection=collection
      }}
  </div>
  <div class="col-12 text-center">
     {{#link-to 'employees.new' class="management-button btn btn-primary btn-danger btn-lg" }}
      <span class="glyphicon glyphicon-plus"></span> Add Employee
     {{/link-to}}
  </div>
</div>
