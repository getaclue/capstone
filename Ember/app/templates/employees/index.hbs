<div class="manage-employees" style="overflow-x:auto;">
  <h3 class="page-title">Manage Employees</h3>
  <table class="employees-table">
    <thead>
      <tr>
        <th><h1>Employee ID</h1></th>
        <th><h1>Full Name</h1></th>
        <th><h1>Email</h1></th>
        <th><h1>Phone</h1></th>
        <th><h1>Start Date</h1></th>
        <th><h1>End Date</h1></th>
        <th><h1>Admin</h1></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |employee|}}
        <tr>
          <td data-th="Employee ID" class="text-align-left">
            {{employee.id}}
          </td>
          <td data-th="Full Name" class="text-align-left">
            {{employee.fullName}}
          </td>
          <td data-th="Email">
            {{employee.email}}
          </td>
          <td data-th="Phone">
            {{employee.phoneNumber}}
          </td>
          <td data-th="Phone">
            {{employee.startDate}}
          </td>
          <td data-th="End Date">
            {{employee.endDate}}
          </td>
          <td data-th="Admin">
            {{employee.isAdmin}}
          </td>
          <td class='employee-operation' style="text-align:center;">
            {{#link-to 'employees.show' employee.id class="dropdown-item"}}
              <span class="glyphicon glyphicon-pencil" style="color:#d30b07;"></span>
            {{/link-to}}
          </td>
          <td class='employee-operation' style="text-align:center;">
            {{#link-to 'employees.delete' employee class="dropdown-item"}}
              <span class="glyphicon glyphicon-minus" style="color:#d30b07;"></span>
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="buttons">
  {{#link-to 'employees.new' class="btn btn-primary managing" }}
    <span class="glyphicon glyphicon-plus"></span> Add Employee
  {{/link-to}}
</div>
