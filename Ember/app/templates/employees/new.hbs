<div class="modal fade" id="employee-editor" tabindex="-1" role="dialog" aria-labelledby="employee-editor-label-new" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="Close" {{action 'goBackToListOfEmployees'}}>
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="employee-editor-label-new">New Employee</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          {{
            employee-editor
            model=model
          }}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" {{action 'goBackToListOfEmployees'}}>Close</button>
        <button type="submit" class="btn btn-primary" {{action 'saveEmployee'}}>Save changes</button>
      </div>
    </div>
  </div>
</div>
