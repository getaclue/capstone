<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" {{action 'goBackToCalendar'}}>
          <span aria-hidden="true">&times;</span>
        </button>
        <button type="button" class="btn btn-outline-default btn-sm">{{model.employee.fullName}}</button>
        <button type="button" class="btn btn-outline-success btn-sm" {{action 'markAppointmentAsCompleted'}}>Mark Completed</button>
        <button type="button" class="btn btn-outline-danger btn-sm" {{action 'deleteAppointment'}}>Delete</button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          {{
            appointment-editor
            model=appointment
            services=services
          }}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" {{action 'goBackToCalendar'}}>Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" {{action 'saveAppointment'}}>Save changes</button>
      </div>
    </div>
  </div>
</div>
