<div class="modal fade" id="user-account-editor" tabindex="-1" role="dialog" aria-labelledby="user-account-editor-new" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="Close" {{action 'goBackToListOfEmployees'}}>
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="user-account-editor-new">Create User Account</h4>
      </div>
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash messageStyle='bootstrap'}}
      {{/each}}
      <div class="modal-body">
        <div class="container-fluid">
          {{
            user-account-editor
            model=model
            confirm=confirm
          }}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" {{action 'goBackToListOfEmployees'}}>Close</button>
        <button type="button" class="btn btn-primary" {{action 'createUser'}}>Save changes</button>
      </div>
    </div>
  </div>
</div>