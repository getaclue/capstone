<div class="management-div">
  <div class="management-title-div">
      <h4><span class="glyphicon glyphicon-tag"></span>Manage Services</h4>
  </div>
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item"><a href="#small-vehicle-list" data-toggle="tab" class="nav-link active">Small Vehicles</a></li>
    <li class="nav-item"><a href="#large-vehicle-list" data-toggle="tab" class="nav-link">Large Vehicles</a></li>
  </ul>
  <br />
  <div class="tab-content">
    <div class="tab-pane fade show active" id="small-vehicle-list">
      <div>
          {{
            management-tables
            model=model.serviceForSmallCars
            headers=headers
            attributes=attributes
            operations=operations
            collection=collection
          }}
      </div>
    </div>
    <div class="tab-pane fade" id="large-vehicle-list">
      <div>
        {{
          management-tables
          model=model.servicesForLargeVehicles
          headers=headers
          attributes=attributes
          operations=operations
        }}
      </div>
    </div>
  </div>
  {{#if currentUser.user.admin}}
    <div class="col-12 text-center">
       {{#link-to 'services.new' class="btn btn-danger btn-lg" }}
        <span class="glyphicon glyphicon-plus"></span> Add New Service
       {{/link-to}}
    </div>
  {{/if}}
  <br />
</div>
