<div class="table-responsive" style="overflow-x:auto;">
  <h3 class="page-title">Manage Employees</h3>
  <table class="table table-hover employees-table">
    <thead class="thead-inverse ">
      <tr>
        <th>Employee ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Email</th>
        {{!-- <th>Address</th> --}}
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |employee|}}
        <tr>
          <td>
            {{employee.id}}
          </td>
          <td>
            {{employee.last_name}}
          </td>
          <td>
            {{employee.first_name}}
          </td>
          <td>
            {{employee.email}}
          </td>
          <td>
            {{employee.phone}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
   <div class="buttons">
    <button type="submit" class="btn btn-primary managing">
      <span class="glyphicon glyphicon-plus"></span>
    </button>
    <button type="submit" class="btn btn-primary managing">
      <span class="glyphicon glyphicon-pencil"></span>
    </button>
    <button type="submit" class="btn btn-primary managing">
      <span class="glyphicon glyphicon-minus"></span>
    </button>
  </div>
</div>
