<div class="card text-center" style="border-bottom-width: 0px;">
  <div class="card-header" style="font-size: 2em;">
    <div class="row">
      <div class="col-2">
        {{#link-to 'my-account'}}
          <span class="glyphicon glyphicon-chevron-left"></span>
        {{/link-to}}
      </div>
      <div class="col-10">
        <span class="glyphicon glyphicon-calendar"></span>
        My Availability
      </div>
    </div>
  </div>
  <div class="card-block">
    <p class="card-text">
      <div class="container-fluid">
        <div class="row">
          <div class="col">
            <div class="form-group row" style="margin-left: 0px; margin-right: 0px;">
              <label for="monday" class="col-5 col-form-label font-weight-bold" style="text-transform: uppercase; padding-left: 0px;">Monday:</label>
              <div class="admin-switch" {{action 'toggleDay' 'showMonday'}}>
                {{input type="checkbox" id="monday" class="checkbox" checked=model.showMonday}}
                <div class="slider round"></div>
              </div>
            </div>
          </div>
        </div>
        {{#if model.showMonday}}
          <div class="row">
            <div class="col-6">
              {{input type="time" value=model.mondayOpen id="monday-start" class="form-control"}}
            </div>
            <div class="col-6">
              {{input type="time" value=model.mondayClose id="monday-finish" class="form-control"}}
            </div>
          </div>
        {{/if}}
