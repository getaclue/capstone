<div class="modal fade" id="appointment-time-selection" tabindex="-1" role="dialog" aria-labelledby="appointment-time-selection-show" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="Close" {{action 'toggleSelectTime'}}>
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="appointment-time-selection-show">Available Times for {{selectedDate}}</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="form-group">
            <label for="staff" class="col-xs-12 col-form-label font-weight-bold" style="text-transform: uppercase;">Staff:</label>
            <div class="col-xs-12">
              {{#power-select
                options=listOfEmployees
                selected=aSelectedEmployee
                renderInPlace=true
                searchField="fullName"
                placeholder="Select a staff member"
                onchange=(action "selectEmployee")
                as |employee|
              }}
               {{employee.fullName}}
              {{/power-select}}
            </div>
          </div>
          {{#if wasEmployeeSelected}}
            {{#each availableTimes as |t|}}
            <button type="button" class="btn btn-outline-info">{{t}}</button>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" {{action 'toggleSelectTime'}}>Close</button>
      </div>
    </div>
  </div>
</div>
