<div class="row">
  <div class="col-12">
    <div class="form-group">
      <label for="client-first-name" class="col-form-label editor-label">First Name:</label>
      <div>
        {{input class="form-control" value=model.firstName id="client-first-name"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-last-name" class="col-form-label editor-label">Last Name:</label>
      <div>
        {{input class="form-control" value=model.lastName id="client-last-name"}}
      </div>
    </div>
     <div class="form-group">
      <label for="client-email" class="col-form-label editor-label">Email:</label>
      <div>
        {{input type="text" class="form-control" value=model.email id="client-email"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-phone-number" class="col-form-label editor-label">Phone Number:</label>
      <div>
        {{input type="tel" class="form-control" value=model.phoneNumber id="client-phone-number" required="required" placeholder="Please use 000-000-0000 as format"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-street" class="col-form-label editor-label">Street:</label>
      <div>
        {{input type="text" class="form-control" value=model.street id="client-street"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-city" class="col-form-label editor-label">City:</label>
      <div>
        {{input type="text" class="form-control" value=model.city id="client-city"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-province" class="col-form-label editor-label">Province:</label>
      <div>
        {{input type="text" class="form-control" value=model.province id="client-province"}}
      </div>
    </div>
    <div class="form-group">
      <label for="client-postal-code" class="col-form-label editor-label">Postal Code:</label>
      <div>
        {{input type="text" class="form-control" value=model.postalCode id="client-postal-code" placeholder="Please use K1K 1K1 as format"}}
      </div>
    </div>
  </div>
</div>

