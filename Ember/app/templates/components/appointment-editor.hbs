<div class="row">
  <div class="form-group row">
    <label for="service" class="col-xs-12 col-form-label">Service:</label>
    <div class="col-xs-12">
      {{#unless serviceSelected}}
        <div class="btn-group-vertical" style="width: 100%;">
          {{#each services as |service|}}
            <button class="btn btn-sm btn-outline-primary" {{action 'selectService' service model}} style="white-space: normal;">{{service.name}}</button>
          {{/each}}
        </div>
      {{else}}
        <div class="col-xs-10" style="padding-left: 0;">
          <button class="btn btn-sm btn-outline-primary" style="white-space: normal; width: 100%;">{{model.service.name}}</button>
        </div>
        <div class="col-xs-2">
          <button class="btn btn-sm btn-outline-danger" {{action 'resetService' model model.service}} style="white-space: normal;"><span class="glyphicon glyphicon-pencil"></span></button>
        </div>
      {{/unless}}
    </div>
  </div>
  <div class="form-group row">
    <label for="service" class="col-xs-12 col-form-label">Staff:</label>
    <div class="col-xs-12">
      {{#unless employeeSelected}}
        <div class="btn-group-vertical" style="width: 100%;">
          {{#each listOfEmployess as |employee|}}
            <button class="btn btn-sm btn-outline-primary" {{action 'selectEmployee' employee model}} style="white-space: normal;">{{employee.fullName}}</button>
          {{/each}}
        </div>
      {{else}}
      <div class="col-xs-10" style="padding-left: 0;">
        <button class="btn btn-sm btn-outline-primary" style="white-space: normal; width: 100%;">{{model.employee.fullName}}</button>
      </div>
      <div class="col-xs-2">
        <button class="btn btn-sm btn-outline-danger" {{action 'resetEmployee' model model.employee}} style="white-space: normal;"><span class="glyphicon glyphicon-pencil"></span></button>
      </div>
      {{/unless}}
    </div>
  </div>
  <div class="form-group row">
    <label for="appointment-start-time" class="col-xs-12 col-form-label">Starts</label>
    <div class="col-xs-12">
      {{input type="datetime-local" class="form-control" id="appointment-start-time" value=model.start}}
    </div>
  </div>
  <div class="form-group row">
    <label for="appointment-end-time" class="col-xs-12 col-form-label">Ends</label>
    <div class="col-xs-12">
      {{input type="datetime-local" class="form-control" id="appointment-end-time" value=model.end}}
    </div>
  </div>
  <div class="form-group row">
    <label for="appointment-notes" class="col-xs-12 col-form-label">Notes</label>
    <div class="col-xs-12">
      {{textarea class="form-control" id="appointment-notes" value=model.notes rows=3}}
    </div>
  </div>
</div>
